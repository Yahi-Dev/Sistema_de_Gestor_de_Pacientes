@using SGDP.Core.Application.ViewModels.Pacientes;
@model List<PatientViewModel>
@{
    ViewData["Title"] = "Index";
}
<div class="container-fluid" style="margin-top: 7px;">
    <div class="row mb-3">
        <div class="col-3 offset-9" style="margin-top:15px;">
            <a asp-controller="Patient" asp-action="RegisterPatient" class="btn btn-outline-success">
                Crear nuevo paciente
            </a>
        </div>
    </div>
    @if (Model == null || Model.Count == 0)
    {
        <h2>No hay pacientes en el sistema</h2>
    }
    else
    {
        <div class="card-body">
            <div class="row">
                @foreach (PatientViewModel item in Model)
                {
                    <div class="card mb-3 mr-3" style="max-width: 500px; margin-right: 20px;">
                        <div class="row no-gutters">
                            <div class="col-md-4">
                                <br />
                                <img src="@item.ImagePathMedico" class="card-img">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title"><strong>@item.Name @item.LastName</strong></h5>
                                    <p class="card-text"><strong>Fecha de nacimiento: </strong>@item.FechaDeNacimiento</p>
                                    <p class="card-text"><strong>Cedula: </strong>@item.Cedula</p>
                                    <p class="card-text"><strong>Telefono: </strong>@item.Phone</p>
                                    <p class="card-text"><strong>Sexo: </strong>@item.Sex</p>
                                </div>
                                <a asp-controller="Patient" asp-action="EditPatient" asp-route-id="@item.Id" class="btn btn-outline-success mt-2">Editar</a>
                                <a asp-controller="Patient" asp-action="DeletePatient" asp-route-id="@item.Id" class="btn btn-outline-danger mt-2">Eliminar</a>
                                <a asp-controller="Patient" asp-action="InfoPatient" asp-route-id="@item.Id" class="btn btn-outline-info mt-2">Informacion</a>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    }
</div>
