@using SGDP.Core.Application.ViewModels.Pacientes;
@model SavePatientViewModel
@{
    ViewData["Title"] = "Delete Patient";
}

<div class="row" style="margin-top: 40px;">

    <div class="col-6 offset-3">

        <div class="card">

            <div class="card-header bg-danger text-light">

                <h4>Esta seguro que desea eliminar el paciente?</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Patient" asp-action="DeletePostPatient">
                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Patient" asp-action="Index" class="btn btn-warning">Cancelar</a>
                </form>
            </div>

        </div>

    </div>

</div>
